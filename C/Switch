#include<stdio.h>
#include<ctype.h>
void main()
{
char ch;int ch1;
printf("Enter The Character To Be Changed\n");
scanf("%c",&ch);
printf("1.UpperCase(Enter Lower Case Charecter)\n2.LowerCase(Enter Upper Case Charecter)\n");
scanf("%d",&ch1);
switch(ch1)
{
case 1: 
        putchar(toupper(ch));
        printf("\n");
        break;
case 2: 
        putchar(tolower(ch));
        printf("\n");
        break;
default:
        printf("Invalid Choice\n");
        break;
}
}
