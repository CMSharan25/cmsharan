#include<stdio.h>
void prime(int n);                      //Function Prototype
int flag=0;
void main()                             //Main Function
{
 int n;
 printf("Enter The Number To Check--->>");
 scanf("%d",&n);
 prime(n);
 if (flag==0)
    printf("It Is A Prime Number\n");
 else 
    printf("It Is Not A prime Number\n");
}
void prime(int n)                     //Function Definition
{
 for(int i=2;i<=n/2;i++)
 {
   if(n%2==0)
    {
      flag=1;
      break;
    }
 }
}


 
           

